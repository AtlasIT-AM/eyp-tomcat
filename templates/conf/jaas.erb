<%- if defined?(@realm) -%>
com.sun.security.jgss.krb5.initiate {
    com.sun.security.auth.module.Krb5LoginModule required
    doNotPrompt=true
    principal="<%= @spn %>@<%= @realm %>"
    useKeyTab=true
    keyTab="../conf/krb5.keytab"
    storeKey=true
    debug=false;
};

com.sun.security.jgss.krb5.accept {
    com.sun.security.auth.module.Krb5LoginModule required
    doNotPrompt=true
    principal="HTTP/<%= @spn %>@<%= @realm %>"
    useKeyTab=true
    keyTab="../conf/krb5.keytab"
    storeKey=true
    isInitiator=false
    debug=false;
};
<%- else -%>
<%= @app %> {
    com.sun.security.auth.module.LdapLoginModule SUFFICIENT
        userProvider="<%= @provider %>"
        userFilter="<%= @filter %>"
        authzIdentity=controlRole
        useSSL=false
        debug=true;
};

Client {
    org.apache.zookeeper.server.auth.DigestLoginModule SUFFICIENT
        username="<%= @username %>"
        password="<%= @password %>";
};
<%- end -%>
